<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="8dp">

    <!-- Centralized Video Container -->
    <FrameLayout
        android:id="@+id/pip_video_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent">

        <!-- Player View for PIP -->
        <androidx.media3.ui.PlayerView
            android:id="@+id/pip_player_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent" />

        <!-- Loading indicator for PIP -->
        <ProgressBar
            android:id="@+id/pip_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Play/Pause overlay -->
        <ImageView
            android:id="@+id/pip_play_pause_overlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/play_player"
            android:alpha="0.8" />

    </FrameLayout>

    <!-- PIP Controls (visible temporarily on tap) -->
    <LinearLayout
        android:id="@+id/pip_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center"
       >

        <ImageButton
            android:id="@+id/pip_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/play_player"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="8dp" />

        <ImageButton
            android:id="@+id/pip_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pause"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="8dp" />

        <ImageButton
            android:id="@+id/pip_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_close_24"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="8dp" />

    </LinearLayout>

</RelativeLayout>