<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <!-- AspectRatioFrameLayout for proper video scaling -->
    <androidx.media3.ui.AspectRatioFrameLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/black"
        app:resize_mode="fit">

        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:controller_layout_id="@layout/custom_player_controls"
            app:resize_mode="fit"
            app:use_controller="true">

            <!-- Loading spinner inside PlayerView -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/GradientCircularProgressBar"
                android:layout_width="@dimen/player_loading_size"
                android:layout_height="@dimen/player_loading_size"
                android:layout_gravity="center"
                android:visibility="gone" />
        </androidx.media3.ui.PlayerView>
    </androidx.media3.ui.AspectRatioFrameLayout>

    <TextView
        android:id="@+id/channel_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circularstdbold"
        android:padding="@dimen/channel_title_padding"
        android:text="More Channels"
        android:textColor="@android:color/white"
        android:textSize="@dimen/channel_title_text_size" />

    <TextView
        android:id="@+id/more_channels_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/channel_subtitle_margin_top"
        android:fontFamily="@font/circularstdbold"
        android:padding="@dimen/channel_subtitle_padding"
        android:text="More Channels"
        android:textColor="@android:color/white"
        android:textSize="@dimen/channel_subtitle_text_size" />

    <!-- RecyclerView container -->


        <!-- RecyclerViews stacked -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/channelRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@dimen/channel_recycler_weight" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shimmerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@dimen/shimmer_recycler_weight" />

        <!-- Pagination Progress Bar - Below RecyclerView -->
        <ProgressBar
            android:id="@+id/paginationProgressBar"
            style="@style/ShapeAppearance.Material3.Corner.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pagination_progress_margin"
            android:indeterminateTint="@color/white"
            android:progressTint="@color/white"
            android:visibility="gone" />


</LinearLayout>