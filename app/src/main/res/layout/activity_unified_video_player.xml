<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:keepScreenOn="true">

    <!-- AspectRatioFrameLayout for proper video scaling -->
    <androidx.media3.ui.AspectRatioFrameLayout
        android:id="@+id/playerContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.5"
        app:resize_mode="fit">


        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:use_controller="true"
            app:controller_layout_id="@layout/custom_player_controls_moview"
            app:resize_mode="fit"
            app:show_timeout="3000">

            <!-- Loading spinner inside PlayerView -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/GradientCircularProgressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </androidx.media3.ui.PlayerView>
    </androidx.media3.ui.AspectRatioFrameLayout>

    <!-- Channel name -->

    <TextView
        android:id="@+id/contentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="4dp"
        android:layout_marginTop="5dp"
        android:text="Movie title"
        android:fontFamily="@font/circularstdbold"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/contentSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:paddingLeft="4dp"
        android:text="Movie sub title"
        android:fontFamily="@font/circularstdbold"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/contentDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingLeft="4dp"
        android:text="Movie Description"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/circularstdbold"
        android:textColor="@color/gray1"
        />


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_contentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        app:shimmer_duration="1000">

        <TextView
            android:id="@+id/movieTitleshimmer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:paddingLeft="4dp"
            android:fontFamily="@font/circularstdbold"
            android:text="" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_contentSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        app:shimmer_duration="1000">

        <TextView
            android:id="@+id/movieSubtitleshimmer"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:paddingLeft="4dp"
            android:fontFamily="@font/circularstdbold"
            android:text="" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_contentDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        app:shimmer_duration="1000">

        <TextView
            android:id="@+id/movieDescriptionshimmer"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:paddingLeft="4dp"
            android:fontFamily="@font/circularstdbold"
            android:text="" />
    </com.facebook.shimmer.ShimmerFrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/icon_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/white"
                android:src="@drawable/share" />

            <TextView
                android:id="@+id/text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/icon_wishlist"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_add_24" />

            <TextView
                android:id="@+id/text_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Wish List"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>




    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/circularstdbold"
        android:text="More Movies"
        android:textColor="@android:color/white"
        android:padding="4dp" />

    <!-- RecyclerView for channel list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="4dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1" />




</LinearLayout>
