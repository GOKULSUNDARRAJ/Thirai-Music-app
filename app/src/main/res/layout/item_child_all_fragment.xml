<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_item_width_small"
    android:layout_height="@dimen/card_item_height_small"
    android:layout_marginEnd="@dimen/card_item_margin_end_small"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius_small"
    app:cardElevation="@dimen/card_elevation_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/posterImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/posterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingTop="@dimen/card_text_padding_top_small"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/card_text_size_small"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>