<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_view"
        android:background="@color/darkGray"
        android:orientation="vertical">

        <!-- Fragment Container -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/cardMiniPlayer"
            android:layout_marginBottom="-3dp" />

        <!-- Dynamic Bottom Navigation RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_nav_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/darkGray"
            android:paddingVertical="8dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:visibility="visible" />

        <!-- Old bottom navigation - HIDDEN -->
        <LinearLayout
            android:id="@+id/custom_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/darkGray"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:visibility="gone"
            android:clipToPadding="false">
            <!-- Old navigation items remain here but are hidden -->
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardoffiline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/cardMiniPlayer"
            android:elevation="8dp"
            android:layout_margin="4dp">

            <LinearLayout
                android:id="@+id/offline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@color/gray"
                android:visibility="gone"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tvOfflineMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offline"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMiniPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_nav_recycler_view"
            android:elevation="@dimen/dp_8"
            app:cardCornerRadius="10dp"
            android:layout_margin="4dp">

            <LinearLayout
                android:id="@+id/miniaudioplayer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_64"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@color/gray"
                android:padding="@dimen/dp_4">

                <!-- Horizontal layout: Album + Info + Play/Pause -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_4">

                    <!-- Album Art -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp_42"
                        android:layout_height="@dimen/dp_42"
                        android:layout_marginEnd="@dimen/dp_8"
                        app:cardCornerRadius="@dimen/dp_4"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:clipChildren="false">

                        <ImageView
                            android:id="@+id/imgMiniAlbumArt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/video_placholder" />
                    </androidx.cardview.widget.CardView>

                    <!-- Song Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMiniSongName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Song Name"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_16"
                            android:ellipsize="end"
                            android:fontFamily="@font/circularstdmedium"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/tvMiniSongArtist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Artist"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/circularstdbook"
                            android:ellipsize="end"
                            android:singleLine="true" />
                    </LinearLayout>

                    <!-- Play/Pause Button -->
                    <ImageView
                        android:id="@+id/btnMiniPlayPause"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/play_player"
                        android:contentDescription="Play/Pause" />
                </LinearLayout>

                <!-- Horizontal Progress Bar -->
                <ProgressBar
                    android:id="@+id/miniProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_4"
                    android:progress="0"
                    android:layout_gravity="bottom"
                    android:max="100"
                    android:progressTint="@color/yellow"
                    android:secondaryProgressTint="@color/gray"
                    android:indeterminate="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/custom_drawer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginEnd="-65dp"
        android:orientation="vertical"
        android:background="@color/bgblack"
        android:fitsSystemWindows="true">

        <include layout="@layout/custom_drawer_body" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>