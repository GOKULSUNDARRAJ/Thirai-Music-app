<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:padding="@dimen/phone_item_padding">

        <FrameLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/phone_item_height"
            android:layout_marginTop="@dimen/phone_item_margin_top"
            android:background="@android:color/transparent">

            <!-- Gradient Border -->
            <com.Saalai.SalaiMusicApp.GradientBorderView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/phone_content_padding">

                <ImageView
                    android:id="@+id/ivPhoneIcon"
                    android:layout_width="@dimen/phone_icon_size"
                    android:layout_height="@dimen/phone_icon_size"
                    android:src="@drawable/call"
                    android:tint="@color/white" />

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/phone_text_margin"
                    android:fontFamily="@font/circularstdmedium"
                    android:text="0203 137 3917"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/phone_text_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tvCountryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/country_margin_start"
            android:layout_marginTop="2dp"
            android:background="#000000"
            android:paddingStart="@dimen/country_padding_horizontal"
            android:paddingEnd="@dimen/country_padding_horizontal"
            android:text="UNITED KINGDOM"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/country_text_size"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>