<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:layout_height="match_parent"
    android:background="@color/bgblack"
    android:padding="@dimen/radio_player_screen_padding"
    android:orientation="vertical">

    <!-- Top Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/radio_player_header_height"
        android:layout_marginBottom="@dimen/radio_player_header_margin_bottom">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/radio_player_back_button"
            android:layout_height="@dimen/radio_player_back_button"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/boardicon"
            android:layout_width="@dimen/radio_player_broadcast_button"
            android:layout_height="@dimen/radio_player_broadcast_button"
            android:padding="@dimen/radio_player_broadcast_padding"
            android:visibility="gone"
            android:src="@drawable/boardcast"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Player -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/radio_player_video_margin"
        android:background="@color/black"
        android:visibility="gone"
        app:show_shuffle_button="false"
        app:show_timeout="2000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="@dimen/radio_player_video_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/radio_card_margin_left"
                android:layout_marginRight="@dimen/radio_card_margin_right"
                android:layout_marginBottom="@dimen/radio_card_margin_bottom"
                app:cardCornerRadius="@dimen/radio_card_corner_radius"
                app:cardElevation="@dimen/radio_card_elevation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/radio_logo_height"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgRadioLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/txtRadioName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/radio_name_margin_top"
                        android:gravity="center"
                        android:text="Radio Name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/radio_name_text_size"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Player Controls -->
            <LinearLayout
                android:id="@+id/playerControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/radio_controls_margin_top"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <ImageView
                    android:id="@+id/btnPrevious"
                    android:layout_width="@dimen/radio_control_prev_next_size"
                    android:layout_height="@dimen/radio_control_prev_next_size"
                    android:layout_margin="@dimen/radio_control_button_margin"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_skip_previous_24" />

                <ImageView
                    android:id="@+id/btnPlayPause"
                    android:layout_width="@dimen/radio_control_play_pause_size"
                    android:layout_height="@dimen/radio_control_play_pause_size"
                    android:layout_margin="@dimen/radio_control_button_margin"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_play_active" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/radio_loading_progress_size"
                    android:layout_height="@dimen/radio_loading_progress_size"
                    android:progressTint="@color/white"
                    android:indeterminate="true"
                    android:layout_margin="@dimen/radio_control_button_margin"
                    android:visibility="gone"
                    android:indeterminateTint="@color/white"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="@dimen/radio_control_prev_next_size"
                    android:layout_height="@dimen/radio_control_prev_next_size"
                    android:layout_margin="@dimen/radio_control_button_margin"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_skip_next_24" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/radio_recommendations_margin"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/radio_section_header_padding_bottom">

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/circularstdbold"
                android:text="More Like this"
                android:textColor="@android:color/white"
                android:textSize="@dimen/radio_section_title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sellall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                android:fontFamily="@font/circularstdbold"
                android:gravity="center_vertical"
                android:text="See all"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="@dimen/radio_see_all_size"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- RecyclerViews -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/radio_recycler_padding_bottom"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shimmerRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/radio_shimmer_recycler_height"
            android:visibility="gone"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/radio_recycler_padding_bottom"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>