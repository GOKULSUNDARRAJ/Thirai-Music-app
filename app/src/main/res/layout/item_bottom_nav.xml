<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:minWidth="@dimen/nav_min_width"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/nav_padding"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/nav_icon"
        android:layout_width="@dimen/nav_icon_size"
        android:layout_height="@dimen/nav_icon_size"
        android:scaleType="fitCenter"
        android:src="@drawable/home_selected" />

    <TextView
        android:id="@+id/nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saalai"
        android:textSize="@dimen/nav_text_size"
        android:fontFamily="@font/circularstdmedium"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center" />

</LinearLayout>